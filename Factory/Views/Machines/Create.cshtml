@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
<h4>Add a new machine</h4>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <hr>
        @Html.LabelFor(model => model.MaintanenceDate)
        <br>
        @Html.EditorFor(model => model.MaintanenceDate)
        <hr>
        <input type="submit" value="Add new machine" />
      }
    </div>
  </div>
  <div class="col-md-8">

  </div>
</div>
<p>@Html.ActionLink("Show all machines", "Index")</p>